{
  "name": "eagzzycsl.github.io",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cloc": "cloc --vcs git",
    "lint:commit": "commitlint --from `git rev-list --max-parents=0 HEAD` --to HEAD",
    "lint:es": "eslint ./*.js && eslint ./.*.js && lerna run lint:es",
    "lint:es-fix": "eslint ./*.js --fix && eslint ./.*.js --fix && lerna run lint:es",
    "lint:md": "markdownlint '**/*.md' --ignore-path .gitignore",
    "lint:style": "stylelint './packages/**/*.scss'",
    "lint:style-fix": "npm run lint:style -- --fix",
    "prepare": "husky install",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "setup": "yarn install --frozen-lockfile && lerna bootstrap && npm run init",
    "init": "yarn workspace @mine/markdown-loader run build",
    "site:build": "yarn workspace @mine/site run build",
    "site:dev": "yarn workspace @mine/site run dev",
    "site:domain": "yarn workspace @mine/site run export:domain",
    "site:local": "yarn workspace @mine/site run export:local && du -sh ./local-export",
    "site:serve": "yarn workspace @mine/site run serve",
    "site:route": "yarn workspace @mine/site run route",
    "site:create-app": "yarn workspace @mine/site run create-app",
    "test": "jest",
    "test:ci": "jest --coverage",
    "ts:check": "lerna run ts:check",
    "verify": "npm-run-all prettier lint:md lint:style lint:es test ts:check lint:commit",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.1",
    "@mine/commitlint-config": "^0.0.0",
    "@mine/eslint-config": "^0.0.0",
    "@mine/prettier-config": "^0.0.0",
    "@mine/stylelint-config": "^0.0.0",
    "@swc/core": "^1.2.105",
    "@swc/jest": "^0.2.20",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.9",
    "cloc": "^2.9.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.10.0",
    "husky": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "markdownlint": "^0.25.1",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "typescript": "^4.6.2"
  }
}
