{
  "name": "eagzzycsl.github.io",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "cloc": "cloc --vcs git",
    "lint:commit": "commitlint --from `git rev-list --max-parents=0 HEAD` --to HEAD",
    "lint:es": "eslint ./*.js && eslint ./.*.js && lerna run lint:es",
    "lint:es-fix": "eslint ./*.js --fix && eslint ./.*.js --fix && lerna run lint:es",
    "lint:md": "markdownlint '**/*.md' --ignore-path .gitignore",
    "lint:style": "stylelint './packages/**/*.scss' --syntax scss",
    "lint:style-fix": "npm run lint:style -- --fix",
    "prepare": "husky install",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "setup": "yarn install --frozen-lockfile && lerna bootstrap",
    "site:build": "yarn workspace @mine/site run build",
    "site:dev": "yarn workspace @mine/site run dev",
    "site:domain": "yarn workspace @mine/site run export:domain",
    "site:local": "yarn workspace @mine/site run export:local && du -sh ./local-export",
    "site:serve": "yarn workspace @mine/site run serve",
    "site:route": "yarn workspace @mine/site run route",
    "test": "jest",
    "test:ci": "jest --coverage",
    "verify": "npm-run-all prettier lint:md lint:style lint:es test lint:commit && yarn workspace @mine/site run ts:check",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@babel/preset-env": "^7.15.0",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^14.1.0",
    "@mine/commitlint-config": "^0.0.0",
    "@mine/eslint-config": "^0.0.0",
    "@mine/prettier-config": "^0.0.0",
    "@mine/stylelint-config": "^0.0.0",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.11.1",
    "babel-jest": "^27.3.0",
    "cloc": "^2.8.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "^7.30.0",
    "husky": "^7.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.3.0",
    "lerna": "^4.0.0",
    "markdownlint": "^0.24.0",
    "markdownlint-cli": "^0.29.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.0",
    "stylelint": "^13.13.1",
    "typescript": "^4.4.3"
  }
}
